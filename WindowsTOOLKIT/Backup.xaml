<Window x:Class="WindowsTOOLKIT.Backup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowsTOOLKIT"
        mc:Ignorable="d"
        Title="Backup" Height="450" Width="800"
        x:Name="winBackup"
        Closing="winBackup_Closing">

    <Grid Margin="16" x:Name="Gbackup">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Lewy przycisk -->
        <Button x:Name="btnCreateBackup"
                Grid.Column="0" Grid.Row="0"
                Margin="8"
                Style="{StaticResource MaterialDesignRaisedButton}"
                FontSize="18"
                Click="btnCreateBackup_Click"
                Content="Stwórz kopię zapasową" 
                Foreground="Black"/>



        <!-- Obrazek pośrodku -->
        <Image Grid.Column="1" Grid.Row="0"
               Margin="16"
               Width="160" Height="160"
               Source="/assets/systemAndSecurity.png"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />

        <!-- Prawy przycisk -->
        <Button x:Name="btnDeleteBackup"
                Grid.Column="2" Grid.Row="0"
                Margin="8"
                FontSize="18"
                Click="btnDeleteBackup_Click"
                Content="Usuń kopię zapasową" 
                Foreground="Black"/> <!-- Test with default style -->


        <!-- Dolny pasek z przyciskiem powrotu -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="8,24,8,8">
            <Button x:Name="BtnBack"
                    Content="Powrót"
                    Width="180"
                    Height="40"
                    HorizontalAlignment="Left"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="BtnBack_OnClick"/>
        </Grid>
    </Grid>
</Window>
