<Window x:Class="WindowsTOOLKIT.Backup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowsTOOLKIT"
        mc:Ignorable="d"
        Title="Backup" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="btnCreateBackup" Grid.Column="0" Grid.Row="0" Height="120" Margin="10" FontSize="16"
                FontFamily="Comic Sans MS">
            <TextBlock Text="Stwórz kopie zapasową" TextWrapping="Wrap" TextAlignment="Center" IsEnabled="False" />
        </Button>
        <Button x:Name="btnDeleteBackup" Grid.Column="2" Grid.Row="0" Height="120" Margin="10" FontSize="16"
                FontFamily="Comic Sans MS">
            <TextBlock Text="Usuń kopie zapasową" TextWrapping="Wrap" Grid.Row="0" TextAlignment="Center" IsEnabled="False" />
        </Button>
        <Image Grid.Column="1" Grid.Row="0" Source="./assets/systemAndSecurity.png"></Image>
        
        <Grid Grid.Row="1" Grid.Column="0"  x:Name="BottomDiv" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnBack" Content="Powrót" HorizontalAlignment="Left" Margin="0,0,10,0" Grid.Column="0" Click="BtnBack_OnClick" />
        </Grid>
    </Grid>
</Window>