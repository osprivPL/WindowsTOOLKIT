    <DockPanel Margin="20">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnBack"
                    Content="Powrót"
                    Click="BtnBack_click"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button x:Name="BtnSave"
                    Content="Zapisz"
                    Click="BtnSave_click"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <UniformGrid x:Name="GPersonalisation" Columns="2" Rows="0" Margin="0,0,0,10">
                <CheckBox x:Name="CbSystemDark" Content="Tryb jasny dla systemu" Margin="10"/>
                <CheckBox x:Name="CbAppDark" Content="Tryb jasny dla aplikacji" Margin="10"/>
                <CheckBox x:Name="CbTaskView" Content="Przycisk 'Widok zadań'" Margin="10"/>
                <CheckBox x:Name="CbSearchBox" Content="Wyszukiwanie na pasku zadań" Margin="10"/>
                <CheckBox x:Name="CbVerbose" Content="Verbose Status" Margin="10"/>
                <CheckBox x:Name="CbRecomendation" Content="Rekomendacje w Menu Start" Margin="10"/>
                <CheckBox x:Name="CbSeconds" Content="Pokaż sekundy na pasku zadań" Margin="10"/>
                <CheckBox x:Name="CbAcceleration" Content="Akceleracja myszy" Margin="10"/>
                <CheckBox x:Name="CbExtensions" Content="Ukryj rozszerzenia plików" Margin="10"/>
                <CheckBox x:Name="CbHidden" Content="Pokaż ukryte pliki/foldery" Margin="10"/>
                <CheckBox x:Name="CbTaskbarAlign" Content="Wyśrodkuj pasek zadań" Margin="10"/>
                <CheckBox x:Name="CbTaskKill" Content="Zabij proces po PPM" Margin="10"/>
                <CheckBox x:Name="CbBingSearch" Content="Bing w menu start" Margin="10"/>
            </UniformGrid>
        </ScrollViewer>
    </DockPanel>
